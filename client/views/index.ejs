<!doctype html>
<html ng-app="eveApp">
    
    <head>
        <title>
            <%=title %>
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="lib/bootstrap/css/bootstrap.css" rel="stylesheet" media="screen">
        <link href="lib/bootstrap/css/bootstrap-theme.css" rel="stylesheet" media="screen">
        <link href="css/app.css" rel="stylesheet" media="screen">
        <link href="css/plugin.css" rel="stylesheet" media="screen">
        <link href="css/pushNotifications.css" rel="stylesheet" media="screen">
        <link href="css/wikipedia.css" rel="stylesheet" media="screen">
        <link href="css/speak.css" rel="stylesheet" media="screen">
        <link href="css/interpreter.css" rel="stylesheet" media="screen">
        <link href="css/bookmarks.css" rel="stylesheet" media="screen">
        <script src="//code.jquery.com/jquery.js"></script>
        <script src="lib/bootstrap/js/bootstrap.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-resource.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-route.js"></script>
        <script src="js/app.js"></script>
        <script src="js/controllers/headerCtrl.js"></script>
        <script src="js/controllers/pushNotificationsCtrl.js"></script>
        <script src="js/controllers/wikipediaCtrl.js"></script>
        <script src="js/controllers/speakCtrl.js"></script>
        <script src="js/controllers/commandsFlowCtrl.js"></script>
        <script src="js/controllers/interpreterCtrl.js"></script>
        <script src="js/controllers/bookmarksCtrl.js"></script>
        <script src="js/services/audioService.js"></script>
    </head>
    
    <body>
        <nav class="navbar navbar-default" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header" ng-controller="headerCtrl">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#/index"><img src="img/eve_small.png"></a>
                <div ng-if="!userLogged">
                    <a href="#/login">login</a>
                </div>
                <div ng-if="userLogged">
                    <a href="" ng-click="logout()">{{userLogged.username}}</a>
                </div>
                
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="#/bookmarks">Bookmarks</a>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>
                </form>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div ng-view></div>
    </body>

</html>
